            //拆分列表
            $.each(LS.getJson("req").DrinkList, function (index, item) {
                for (var i = 0; i < item.Number; i++)
                    OrdDrink.push(item);
            });
            //重置数量
            $.each(OrdDrink, function (index, item) { item.Number = 1 });
            var Ord = {
