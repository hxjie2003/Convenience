    //登录检测
    function checkLogin(withoutLogin) {
        var state = false;
        try {
            if (withoutLogin) {
                state = window.external.run("Member", "IsLogin", "").toLowerCase() == "true"; //window.external.IsLogin();
            }
            else {
                var userInfo = window.external.run("Member", "GetMemberInfo", "");
                state = userInfo != null;
            }
        } catch (ex) { }
        return state;
    }
</script>